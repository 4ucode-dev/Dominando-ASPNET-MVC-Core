@model MinhaDemoMvc.Models.Filme

@{
    ViewData["Title"] = "Adicionar";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div>

        <form asp-action="Adicionar">

            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />

                <label asp-for="DataLancamento" class="control-label"></label>
                <input asp-for="DataLancamento" class="form-control" />

                <label asp-for="Genero" class="control-label"></label>
                <input asp-for="Genero" class="form-control" />

                <label asp-for="Avaliacao" class="control-label"></label>
                <input asp-for="Avaliacao" class="form-control" />

                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />

                <div class="form-group">
                    <input type="submit" value="Adicionar" class="btn btn-primary" />
                </div>
            </div>

        </form>

    </div>
</div>